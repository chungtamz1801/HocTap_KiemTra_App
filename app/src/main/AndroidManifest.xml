<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HocTap_KiemTra_App"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.hoctap_kiemtra_app.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".LectureActivity"
            android:exported="false" />

        <activity
            android:name=".StudentActivity"
            android:exported="false" />

        <activity
            android:name=".ExamListActivity"
            android:exported="false" />
        <activity
            android:name=".DoQuizActivity"
            android:exported="false" />
        <activity
            android:name=".ResultActivity"
            android:exported="false" />
        <activity
            android:name=".ReviewActivity"
            android:exported="false" />
        <activity
            android:name=".CreateExamActivity"
            android:exported="false" />
        <activity
            android:name=".EditExamActivity"
            android:exported="false" />
        <activity
            android:name=".ExamDetailActivity"
            android:exported="false" />
        <activity
            android:name=".QuestionManageActivity"
            android:exported="false" />
        <activity
            android:name=".QuestionCreateActivity"
            android:exported="false" />
        <activity
            android:name=".QuestionEditActivity"
            android:exported="false" />

        <activity
            android:name="com.example.hoctap_kiemtra_app.LessonDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:parentActivityName="com.example.hoctap_kiemtra_app.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hoctap_kiemtra_app.MainActivity" />
        </activity>

    </application>

</manifest>