<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HocTap_KiemTra_App"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <!-- SPLASH SCREEN - -->
        <activity
            android:name="com.example.chatapp.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LOGIN SCREEN  -->
        <activity
            android:name="com.example.chatapp.LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- MAIN ACTIVITY WITH BOTTOM NAVIGATION  -->
        <activity
            android:name="com.example.hoctap_kiemtra_app.MainActivityNew"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Học tập &amp; Kiểm tra" />

        <!-- OLD MAIN ACTIVITY  -->
        <activity
            android:name="com.example.hoctap_kiemtra_app.MainActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>

        <!-- LECTURER & STUDENT ACTIVITIES -->
        <activity
            android:name="com.example.chatapp.LectureActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Quản lý - Giảng viên" />

        <activity
            android:name="com.example.chatapp.StudentActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Sinh viên" />

        <!-- EXAM MANAGEMENT ACTIVITIES -->
        <activity
            android:name="com.example.chatapp.ExamListActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Danh sách đề thi"
            android:parentActivityName="com.example.chatapp.LectureActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.chatapp.LectureActivity" />
        </activity>

        <activity
            android:name="com.example.chatapp.CreateExamActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Tạo đề thi mới"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName="com.example.chatapp.ExamListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.chatapp.ExamListActivity" />
        </activity>

        <activity
            android:name="com.example.chatapp.EditExamActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Chỉnh sửa đề thi"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName="com.example.chatapp.ExamListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.chatapp.ExamListActivity" />
        </activity>

        <activity
            android:name="com.example.chatapp.ExamDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Chi tiết đề thi"
            android:parentActivityName="com.example.chatapp.ExamListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.chatapp.ExamListActivity" />
        </activity>

        <!-- QUESTION MANAGEMENT ACTIVITIES -->
        <activity
            android:name="com.example.chatapp.QuestionManageActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Quản lý câu hỏi"
            android:parentActivityName="com.example.chatapp.ExamListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.chatapp.ExamListActivity" />
        </activity>

        <activity
            android:name="com.example.chatapp.QuestionCreateActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Tạo câu hỏi mới"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName="com.example.chatapp.QuestionManageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.chatapp.QuestionManageActivity" />
        </activity>

        <activity
            android:name="com.example.chatapp.QuestionEditActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Chỉnh sửa câu hỏi"
            android:windowSoftInputMode="adjustResize"
            android:parentActivityName="com.example.chatapp.QuestionManageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.chatapp.QuestionManageActivity" />
        </activity>

        <!-- QUIZ TAKING ACTIVITIES -->
        <activity
            android:name="com.example.chatapp.DoQuizActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Làm bài thi"
            android:parentActivityName="com.example.hoctap_kiemtra_app.MainActivityNew">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hoctap_kiemtra_app.MainActivityNew" />
        </activity>

        <activity
            android:name="com.example.chatapp.ResultActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Kết quả" />

        <activity
            android:name="com.example.chatapp.ReviewActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Xem lại bài làm"
            android:parentActivityName="com.example.hoctap_kiemtra_app.MainActivityNew">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hoctap_kiemtra_app.MainActivityNew" />
        </activity>

        <!-- LESSON ACTIVITIES -->
        <activity
            android:name="com.example.hoctap_kiemtra_app.LessonDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="Chi tiết bài học"
            android:parentActivityName="com.example.hoctap_kiemtra_app.MainActivityNew">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.hoctap_kiemtra_app.MainActivityNew" />
        </activity>

    </application>

</manifest>